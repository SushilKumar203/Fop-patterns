//hourglass
#include <stdio.h>

int main() {
    int n, i, j, space;

    printf("Enter the number of rows for the top half of the hourglass: ");
    scanf("%d", &n);

    // Top half of the hourglass
    for(i = n; i >= 1; i--) {
        // Print spaces
        for(space = 0; space < n - i; space++) {
            printf(" ");
        }

        // Print asterisks
        for(j = 1; j <= (2 * i - 1); j++) {
            printf("*");
        }

        printf("\n");
    }

    // Bottom half of the hourglass
    for(i = 2; i <= n; i++) {
        // Print spaces
        for(space = 0; space < n - i; space++) {
            printf(" ");
        }

        // Print asterisks
        for(j = 1; j <= (2 * i - 1); j++) {
            printf("*");
        }

        printf("\n");
    }

  //rhombus

  #include <stdio.h>

int main() {
    int n, i, j;

    printf("Enter the number of rows for the rhombus: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++) {
        // Print leading spaces
        for(j = 1; j < i; j++) {
            printf(" ");
        }

        // Print asterisks
        for(j = 1; j <= n; j++) {
            printf("*");
        }

        printf("\n");
    }

    return 0;
}

    return 0;
}
